<% provide(:title, "Documentos") %>
<div class="pst-corpo-main-container">
  <div class="pst-main-container">
    <div class="main clearfix">
      <h2>Gerenciador de Documentos</h2>
      <div class="pst-container">
        <div class="pst-content">
          <div class="table-responsive">
            <table id="tablesorter" class="display" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Nome do Usuário</th>
                  <th>Título</th>
                  <th>Descrição</th>
                  <th>Aprovado?</th>
                  <th>Data defesa</th>
                  <th>Tese/Dissertação</th>
                  <th>Mestrado/Doutorado</th>
                  <th>Download</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @documentos.each do |documento| %>
                  <tr>
                    <td><%= documento.user.name %></td>
                    <td><%= documento.titulo %></td>
                    <td><%= documento.descricao %></td>
                    <td>
                      <% if documento.status %>
                        <%= "Sim" %>
                      <% else %>
                        <%= "Não" %>
                      <% end %>
                    </td>
                    <td><%= imprime_data(documento.data_defesa, 0) %></td>
                    <td>
                      <% if documento.tese %>
                        <%= "Tese" %>
                      <% else %>
                        <%= "Dissertação" %>
                      <% end %>
                    </td>
                    <td>
                      <% if documento.mestrado %>
                        <%= "Mestrado" %>
                      <% else %>
                        <%= "Doutorado" %>
                      <% end %>
                    </td>
                    <td><%= link_to "Download", documento.arquivo_url %></td>
                    <td><%= link_to 'Ver', documento %></td>
                    <td><%= link_to 'Editar', edit_documento_path(documento) %></td>
                    <td><%= link_to 'Deletar', documento, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            </div>
        </div>
        <div class="pst-button">
          <button><%= link_to 'Novo Documento', new_documento_path %></button>
        </div>
      </div>
    </div>  
  </div>
  <%= render 'layouts/footer' %>
</div>
            
            
