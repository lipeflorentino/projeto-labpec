<div class="pst-corpo-main-container">
  <%= render 'layouts/header-admin' %>
  <div class="pst-main-container">
    
    <p id="notice"><%= notice %></p>
    <div class="pst-container">
      <div class="pst-content">
        <div class="table-responsive">
          <table id="tablesorter" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                  <th>Titulo</th>
                  <th>Descricao</th>
                  <th>User</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.titulo %></td>
                    <td><%= post.descricao %></td>
                    <td><%= post.user_id %></td>
                    <td><%= link_to 'Visualizar', post %></td>
                    <td><%= link_to 'Editar', edit_post_path(post) %></td>
                    <td><%= link_to 'Apagar', post, method: :delete, data: { confirm: 'EstÃ¡ certo disso?' } %></td>
                  </tr>
                <% end %>
            </tbody>
        </table>
        </div>
      </div>
      <div class="pst-button">
        <button><%= link_to 'Novo Post', new_post_path %></button>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>