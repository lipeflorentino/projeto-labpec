<%= form_for(user, html: { multipart: true}, :url => {:action => "editpasswordupdate" , params: {id: @user.id}}) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- Senha antiga para provar que é o usuário antes de trocar a senha -->
  <div class="form-group">
    <%= f.label :actual_password %><br>
    <%= f.password_field :actual_password, class:'form-control', :placeholder=>"Digite a senha antiga"%>
  </div>
  
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class:'form-control', :placeholder=>"Digite a senha atual" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class:'form-control', :placeholder=>"Confirme a senha" %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Alterar Senha', class:'btn btn-default'%>
  </div>
<% end %>