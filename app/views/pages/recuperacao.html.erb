<div class="pst-corpo-main-container">
  <div class="pst-main-container">
    <div class="main clearfix">
    <h2>Recuperar senha</h2>
      <div class="row">
        <div class="col-lg-6">
           <%= form_for(:password_reset, url: password_resets_path) do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
              <div class="actions">  
                <%= f.submit "Trocar minha senha", class: "btn" %>
              </div>
            <% end %>
          
            <p> Não recebi meu e-mail de confirmação </p>
          
            <%= form_for(:user, url: lostemail_path ) do |f| %>
            
            <div class="form-group"
              <%= f.label :email %><br>
              <%= f.email_field :email, :value => "", class:'form-control' %>
            </div>
            
            <div class="actions">
              <%= f.submit 'Re-enviar confirmação', class:'btn'%>
            </div>
            
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>  